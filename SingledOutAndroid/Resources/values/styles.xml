<?xml version="1.0" encoding="UTF-8" ?>
<resources>
	<style name="customtheme" parent="@android:style/Theme.Light">
		<item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="android:textColorHint">#c1c1c1</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="SpinnerItem">
        <item name="android:textColor">#993399</item>
        <item name="android:background">@drawable/my_rectangle</item>
    </style>
    <style name="SpinnerDropDownItem">
        <item name="android:textColor">#993399</item>
        <item name="android:background">@drawable/my_rectangle</item>
    </style>

<!--	<style name="spinnerstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:background">#ffffff</item>
	</style>-->

	<style name="CustomDialogTheme">
	    <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
	    <item name="android:textColorPrimary">#ffffff</item>
	    <item name="android:textColor">#ffffff</item>
	    <item name="android:layout_gravity">center_vertical|center_horizontal</item>	    	
	    <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>    	
        <item name="android:textSize">16dp</item>
	</style>
	<style name="CustomAlertDialogStyle">
		<item name="android:windowBackground">@android:color/transparent</item>
	    <item name="android:bottomBright">@color/light_blue</item>
	    <item name="android:bottomDark">@color/light_blue</item>
	    <item name="android:bottomMedium">@color/light_blue</item>
	    <item name="android:centerBright">@color/light_blue</item>
	    <item name="android:centerDark">@color/light_blue</item>
	    <item name="android:centerMedium">@color/light_blue</item>
	    <item name="android:fullBright">@color/light_blue</item>
	    <item name="android:fullDark">@color/light_blue</item>
	    <item name="android:topBright">@color/light_gray</item>
	    <item name="android:topDark">@color/light_gray</item>	   
	</style>

	<style name="ListView">
		<item name="android:layout_height">200dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">2dp</item>
        <item name="android:minWidth">25px</item>
        <item name="android:minHeight">25px</item>
        <item name="android:divider">@drawable/listviewselector</item>  
	</style>
    <style name="ListViewTextItem">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#0188BA</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="ActionBar">
        <item name="android:background">#ffffff</item>
        <item name="android:titleTextStyle">@style/TitleColor</item>
    </style>

    <style name="TitleColor">
        <item name="android:textColor">#B9B9B9</item>
    </style>

	<style name="Theme.Splash" parent="android:Theme">
		<item name="android:windowBackground">@color/white</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="button">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">7dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="buttondark" parent="@style/button">
    	<item name="android:background">@drawable/roundedbuttondark</item>
    </style>

	<style name="buttonlight" parent="@style/button">
        <item name="android:background">@drawable/roundedbutton</item>
    </style>

   	<style name="text">        
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

	<style name="titletext" parent="@style/text">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">19dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="notification" parent="@style/text">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14dp</item>     
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@drawable/notificationbox</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style> 

    <style name="descriptiontext" parent="@style/text">
        <item name="android:layout_centerInParent">true</item>       
    	<item name="android:gravity">center_horizontal</item> 
		<item name="android:textSize">16dp</item>
		<item name="android:textColor">#0645BF</item>
		<item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="hyperlinktext" parent="@style/text">
        <item name="android:clickable">true</item>   
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#0645BF</item>
    </style>

    <style name="edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textColorHint">#c1c1c1</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="edittextvalidation">
    	<item name="android:inputType">textPersonName</item>
    	<item name="android:background">@drawable/validationbox</item>
    	<item name="android:layout_width">match_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:textColor">#ffe90d0d</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:visibility">gone</item>
    	<item name="android:layout_marginBottom">20dp</item>
    	<item name="android:layout_marginLeft">4dp</item>
    	<item name="android:layout_marginRight">4dp</item>
    	<item name="android:textSize">14dp</item>
    </style>

    <style name="edittextcapstart" parent="@style/edittext">
    	<item name="android:inputType">textCapWords</item>
    </style>

    <style name="edittextemail" parent="@style/edittext">
    	<item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="edittextpassword" parent="@style/edittext">
    	<item name="android:inputType">textPassword</item>
    </style>

    <style name="parentlayout">
        <item name="android:background">#97C7DE</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="dialogLayout">
        <item name="android:background">#FFFFFF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="childlayout">
        <item name="android:background">@drawable/roundedlayout</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="mapframelayout">
        <item name="android:background">@drawable/roundedlayout</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

	<style name="checkbox" parent="@android:style/Widget.CompoundButton.CheckBox"> 
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#0645BF</item>
        <item name="android:checked">false</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

   	<style name="radiogroup"> 
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="radiobutton" parent="@android:style/Widget.CompoundButton.RadioButton">
    	<item name="android:button">@drawable/custom_btn_radio</item>
    	<item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
<!--        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>-->
	</style>

   	<style name="progressspinner"> 
   		<item name="android:textAppearance">?android:attr/textAppearanceLargeInverse</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
    </style>           
</resources>
