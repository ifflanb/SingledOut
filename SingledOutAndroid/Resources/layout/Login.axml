<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:id="@+id/signincontainerlayout"
    style="@style/parentlayout">
    <RelativeLayout
        android:id="@+id/signincontainerinnerlayout"
        style="@style/childlayout">
        <TextView
            android:text="Login"
            android:id="@+id/loginDescription"
            android:drawableBottom="@drawable/line"
            style="@style/titletext" />
        <EditText
            android:id="@+id/lblValidation"
            android:layout_below="@+id/loginDescription"
            style="@style/edittextvalidation" />
        <EditText
            android:id="@+id/txtEmailAddress"
            android:hint="Email Address"
            android:layout_below="@+id/lblValidation"
            style="@style/edittextemail" />
        <EditText
            android:id="@+id/txtPassword"
            android:hint="Password"
            android:layout_below="@+id/txtEmailAddress"
            style="@style/edittextpassword" />
        <Button
            android:text="Login"
            android:id="@+id/btnLogin"
            android:layout_below="@+id/txtPassword"
            style="@style/buttonlight" />
        <TextView
            android:text="Forgotten your password?"
            android:id="@+id/lblForgottenPassword"
            android:layout_below="@+id/btnLogin"
            style="@style/hyperlinktext" />
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/progressSpinner"
            android:visibility="gone"
            android:layout_gravity="center_vertical|center_horizontal" />
    </RelativeLayout>
</RelativeLayout>